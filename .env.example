# =============================================================================
# Application Configuration
# =============================================================================
# Your application name (used in emails, notifications, etc.)
APP_NAME=Laravel

# Environment: local, staging, production
APP_ENV=local

# Application key (auto-generated via: php artisan key:generate)
APP_KEY=

# Enable debug mode (MUST be false in production)
APP_DEBUG=true

# Your application URL (used for asset generation, emails, etc.)
APP_URL=http://localhost

# =============================================================================
# Localization
# =============================================================================
APP_LOCALE=en
APP_FALLBACK_LOCALE=en
APP_FAKER_LOCALE=en_US

# =============================================================================
# Maintenance Mode
# =============================================================================
APP_MAINTENANCE_DRIVER=file
# APP_MAINTENANCE_STORE=database

# =============================================================================
# Performance & Security
# =============================================================================
# Number of PHP workers (uncomment for production)
# PHP_CLI_SERVER_WORKERS=4

# Password hashing rounds (higher = more secure but slower)
BCRYPT_ROUNDS=12

# =============================================================================
# Logging
# =============================================================================
LOG_CHANNEL=stack
LOG_STACK=single
LOG_DEPRECATIONS_CHANNEL=null
LOG_LEVEL=debug

# =============================================================================
# Database Configuration
# =============================================================================
# Default: SQLite (easiest for development)
# For MySQL/PostgreSQL, uncomment and configure the options below
DB_CONNECTION=sqlite
# DB_HOST=127.0.0.1
# DB_PORT=3306
# DB_DATABASE=laravel
# DB_USERNAME=root
# DB_PASSWORD=

# =============================================================================
# Session & Cache
# =============================================================================
# Session driver: file, cookie, database, redis, memcached
SESSION_DRIVER=database
SESSION_LIFETIME=120
SESSION_ENCRYPT=false
SESSION_PATH=/
SESSION_DOMAIN=null

# Cache driver: file, database, redis, memcached
CACHE_STORE=database
# CACHE_PREFIX=

# =============================================================================
# Queue & Broadcasting
# =============================================================================
# Queue connection: sync, database, redis, sqs
QUEUE_CONNECTION=database

# Broadcasting: log, pusher, redis, ably
BROADCAST_CONNECTION=log

# =============================================================================
# File Storage
# =============================================================================
# Filesystem disk: local, public, s3
FILESYSTEM_DISK=local

# =============================================================================
# External Services
# =============================================================================
# Memcached
MEMCACHED_HOST=127.0.0.1

# Redis (for caching, queues, or sessions)
REDIS_CLIENT=phpredis
REDIS_HOST=127.0.0.1
REDIS_PASSWORD=null
REDIS_PORT=6379

# =============================================================================
# Mail Configuration
# =============================================================================
# Mail driver: smtp, sendmail, mailgun, ses, postmark, log
MAIL_MAILER=log
MAIL_SCHEME=null
MAIL_HOST=127.0.0.1
MAIL_PORT=2525
MAIL_USERNAME=null
MAIL_PASSWORD=null
MAIL_FROM_ADDRESS="hello@example.com"
MAIL_FROM_NAME="${APP_NAME}"

# =============================================================================
# AWS Services (S3, SES, etc.)
# =============================================================================
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_DEFAULT_REGION=us-east-1
AWS_BUCKET=
AWS_USE_PATH_STYLE_ENDPOINT=false

# =============================================================================
# Frontend (Vite)
# =============================================================================
VITE_APP_NAME="${APP_NAME}"
